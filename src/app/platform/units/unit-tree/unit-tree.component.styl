@import '~src/assets/variables';

:host
  display: block
  max-height: 720px
  width: 330px
  padding: 10px 30px
  overflow-y: auto
  direction: ltr

.rtl :host #treeWrapper
  direction: rtl

.rtl :host ul
  margin: 2px 19px 0 0

  li
    border-right: 1px solid rgb(100, 100, 100)

  li:last-child
    border-right: none

  li:before
    right: -3px
    content: ""

  li:last-child:before
    border-right: 1px solid rgb(100, 100, 100)

.ltr :host ul
  margin: 2px 0 0 19px

  li
    border-left: 1px solid rgb(100, 100, 100)

  li:last-child
    border-left: none

  li:before
    left: -3px
    content: ""

  li:last-child:before
    border-left: 1px solid rgb(100, 100, 100)

ul
  display: none

  li
    margin: 0
    padding: 0 3px
    line-height: 20px
    color: #369
    font-weight: bold
    cursor: pointer

    i
      border: 1px solid

    span.active
      text-decoration: underline

  li.disabled
    pointer-events: none
    color: GreyColor

  li:before
    position: relative
    top: -0.3em
    display: inline-block
    height: 40px
    width: 12px
    color: #fff
    border-bottom: 1px solid rgb(100, 100, 100)


ul.toggled, #tree, #tree > ul
  display: block

#tree
  margin: 0

  > li:before
    content: none

.rtl :host #tree
  > li
    border-right: none

.ltr :host #tree
  > li
    border-left: none


