@import '~src/assets/variables';

.unit-container
  display: flex
  margin-top: 20px

.unit-border
  display: flex
  align-items: center

.unit-border:after
  content: ""
  height: 3px
  width: 15px
  background-color: BlueColor

.unit
  display: flex
  align-items: center
  width: 300px
  padding: 10px 5px
  border-right: 5px solid BlueColor
  border-radius: 5px
  box-shadow: 0 3px 6px 0 rgba(0, 0, 0, 0.32)
  color: BlueColor
  cursor: pointer

  .triangle-down
    border-top-color: inherit

  .triangle-left
    border-right-color: inherit

.unit.disabled
  background-color: GreyColor
  pointer-events: none
  cursor: not-allowed

.active .unit
  background-color: BlueColor
  color: WhiteColor
  border-right-color: WhiteColor

.unit-block
  transition: 0.3s
