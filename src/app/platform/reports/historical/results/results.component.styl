@import '~src/assets/variables';

.action-btn
  width: 100px
  background-color: LightMaterialGrey
  color: BlueColor

.mat-menu-item
  text-align: center

.table
  th, td
    direction: ltr
    text-align: center

  th
    background-color: BlueColor
    color: WhiteColor
    border-right: 1px solid
    border-left: 1px solid

  thead, tbody, tfoot
    tr
      display: table
      width: 100%
      table-layout: fixed

  tbody
    display: block
    height: 600px
    max-height: 600px
    overflow-y: auto

    tr
      display: table

      td
        background-color: WhiteColor

    .loader-cell
      height: 600px

      .loader
        margin: 0 auto

  tfoot
    td
      background-color: BlueColor
      color: WhiteColor
