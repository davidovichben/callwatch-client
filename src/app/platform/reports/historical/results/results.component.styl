@import '~src/assets/variables';

button
  width: 100px
  background-color: LightMaterialGrey
  color: BlueColor

.table
  th, td
    text-align: center

  th
    background-color: BlueColor
    color: WhiteColor

  thead, tbody, tfoot
    tr
      display: table
      width: 100%
      table-layout: fixed

  tbody
    display: block
    max-height: 600px
    overflow-y: auto

    tr
      display: table

      td
        background-color: WhiteColor

  tfoot
    td
      background-color: LighterBlueColor
      color: WhiteColor
