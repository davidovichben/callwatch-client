.form-field
  position: relative
  display: flex
  min-height: 43px
  margin-top: 5px
  padding: 7px 5px
  border-radius: 4px
  border: 1px solid rgba(0, 0, 0, 0.12)
  background-color: #fff
  cursor: text

  .placeholder
    position: absolute
    top: -10px
    font-size: 12px
    margin: 0 5px
    background-color: #fff

  input
    width: 100px
    border: none
    outline: 0

