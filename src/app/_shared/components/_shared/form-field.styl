@import '~src/assets/variables';

.form-field
  position: relative
  min-height: 47px
  margin-top: 5px
  padding: 7px 5px
  border-radius: 6px
  border: 1px solid rgba(0, 0, 0, 0.12)
  background-color: #fff

  .placeholder
    position: absolute
    top: -10px
    font-size: 16px
    margin: 0 5px
    background-color: #fff
    color: LightBlackColor
    opacity: 1

  input
    border: none
    outline: none
