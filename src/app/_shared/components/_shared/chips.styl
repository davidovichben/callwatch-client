.chip
  display: flex
  align-items: center
  justify-content: space-between
  min-width: 70px
  margin: 3px 5px
  padding: 3px 6px
  border-radius: 6px
  background-color: #afafaf
  color: #fff

  > mat-icon, > span
    font-size: 14px

  > mat-icon
    height: 14px
    width: 14px
    cursor: pointer
