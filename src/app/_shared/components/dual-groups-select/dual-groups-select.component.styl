@import '~src/assets/variables';

mat-form-field
  width: 250px !important

  mat-icon
    color: DarkGreyColor

.group
  position: relative

  .placeholder
    position: absolute
    top: -8px
    margin: 0 8px
    padding: 0 5px
    font-size: 12px
    background-color: #fff
    color: BlueColor

  ul
    height: 200px
    width: 250px
    margin-top: 10px
    overflow: auto
    background-color: #fff
    border: 1px solid DarkGreyColor

    li
      padding: 4px 20px
      color: BlueColor
      background-color: #fff
      cursor: pointer

    li.selected
      color: #fff
      background-color: BlueColor

button
  width: 100px
  font-size: 12px

