:host
  display: flex
  justify-content: center
  direction: ltr

mat-form-field
  width: 30px
  margin: 0 10px
  font-size: 24px

  input
    text-align: center

  input::-webkit-outer-spin-button,
  input::-webkit-inner-spin-button
    -webkit-appearance: none
    margin: 0


  input[type=number]
    -moz-appearance: textfield
