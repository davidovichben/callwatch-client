@import '~src/assets/extendables';

:host
  position: relative

video
  width: 100%

#overlay
  @extend .flex-center
  position: absolute
  top: 0
  right: 0
  width: 100%
  height: 100%
  background: rgba(0, 0, 0, 0.3)
  font-size: 32px
  cursor: pointer
  z-index: 99

  i
    z-index: 999
    color: #fff

#overlay.hide
  background: initial

  i
    display: none
