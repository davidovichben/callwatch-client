@import '~src/assets/variables';

#selectLabel
  display: flex
  justify-content: space-between
  margin: 8px 0
  color: rgba(0, 0, 0, .54)
  border-bottom: 1px solid #aeaeae
  cursor: pointer

  i
    color: #000

#dropdown
  height: 240px
  z-index: 999999999
  background-color: #fff

  #search
    border-bottom: 1px solid rgba(0, 0, 0, .54)

    > input
      width: 100%
      height: 40px
      border: none
      outline: 0

  #options
    position: relative
    max-height: 200px
    overflow-y: auto

    #topSign
      font-size: 18px
      color: rgba(0, 0, 0, .54)

    .option
      width: 100%
      padding: 8px 4px
      font-size: 14px
      cursor: pointer

    .option:hover, .option.active
      background-color: BlueColor
      color: #fff
