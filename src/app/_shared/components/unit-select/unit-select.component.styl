:host
  display: block
  position: relative
  min-width: 180px
  border-radius: 11px

#selectLabel
  position: relative
  height: 59.5px
  width: 100%
  margin-bottom: 20px
  color: rgba(0, 0, 0, .6)
  border: 1px solid rgba(0, 0, 0, .12)
  border-radius: 5px
  box-sizing: content-box
  z-index: 99

#selectLabel:hover
  border-color: transparent

#selectLabel.opened
  border-color: transparent

#selectLabel.selected #placeholder
  position: absolute
  background: #fff
  font-size: 1rem

#selectLabel.opened #placeholder
  color: #3f51b5

#selectLabelBorder
  position: absolute
  top: -1px
  right: -1px
  height: 62px
  width: 100%
  border: 2px solid transparent
  border-radius: 5px
  pointer-events: none
  transition: border-color 0.1s

#selectLabel:hover #selectLabelBorder
  border-color: #000

#selectLabel.opened #selectLabelBorder
  border-color: #3f51b5

#selectLabelCover
  display: flex
  justify-content: space-between
  align-items: center
  height: 100%
  width: 100%
  border-radius: 5px
  padding: 0 .75em 0 .75em
  background-color: #fff

#selectedValue
  height: 32px
  overflow: hidden

#selectedValue > span
  display: inline-flex
  align-items: center
  height: 100%
  margin-left: 3px

#selectLabel, #filterInput
  display: flex
  justify-content: space-between
  align-items: center
  cursor: pointer

#buttons
  display: flex

mat-icon
  color: #000

#resetIcon
  margin: 0 3px

#dropdown
  position: fixed
  box-shadow: 0 2px 8px 0 #bdbdbd99
  border-radius: 4px
  border: 1px solid rgba(0, 0, 0, .15)
  border-top: none
  background-color: #fff
  z-index: 999999999

#filterInput
  padding: 4px 2px
  height: 47px
  background-color #f5f5f5
  width: 100%

#filterInput > input
  padding: 6px 2px
  flex-grow: 1
  border: none
  background-color #f5f5f5
  border-radius: 4px
  outline: none
  font-size: 18px

#filterInput > i
  margin-left: 6px

#options
  overflow: auto
  list-style-type: none
  margin: 0
  padding: 0
  max-height: 235px

.rtl :host ul
  margin: 2px 25px 0 0

.ltr :host ul
  margin: 2px 0 0 25px

.unit
  padding: 0 5px
  width: 100%
  height: 47px
  cursor: pointer

.unit:hover
  background-color #f5f5f5

ul
  display: none

ul.toggled
  display: block
