@import '~src/assets/variables';

@font-face
  src: url('assets/fonts/OpenSansHebrew-Regular.ttf')
  font-family: OpenSans

@font-face
  src: url('assets/fonts/Magistral-Medium.ttf')
  font-family: Magistral

body
  margin: 0
  padding: 0
  font-family: OpenSans

th:first-child, td:first-child
  padding: 0.75rem 25px !important

td
  vertical-align: middle

ul
  margin: 0
  padding: 0
  list-style-type: none

h1, h2, h3, h4, .h1, .h2, .h3, .h4
  color: BlueColor

a, a:hover
  text-decoration: none !important

input[type=checkbox], input[type=radio]
  cursor: pointer

input[type=file]
  display: none

button
  border: none

button:focus
  outline: 0 !important

.flex-grow-1
  flex-grow: 1

.flex-center
  display: flex
  align-items: center
  justify-content: center

.flex-between
  display: flex
  align-items: center
  justify-content: space-between

.flex-end
  display: flex
  align-items: center
  justify-content: flex-end

.bold
  font-weight: bold

.underline
  text-decoration: underline

.white-text
  color: #fff

.grey-text
  color: GreyColor

.blue-text
  color: BlueColor

.red-text
  color: RedColor

.f-12
  font-size: 12px

.f-16
  font-size: 16px

.f-18
  font-size: 18px

.f-20
  font-size: 20px

.w-100p
  width: 100px

.w-200p
  width: 200px

.w-300p
  width: 300px

.pointer
  cursor: pointer

.disabled
  pointer-events: none

.enabled
  pointer-events: all

.link
  color: #024dbc
  cursor: pointer

.fade
  opacity: 0
  transition: 0.3s

.fade.show
  opacity: 1

.rtl .btn > img
  margin-left: 10px

.ltr .btn > img
  margin-right: 10px

.grey-btn, .blue-btn, .red-btn
  color: WhiteColor !important

.white-btn
  background-color: LightColor !important
  color: BlueColor !important
  border: 1px solid BlueColor !important

.grey-btn
  background-color: GreyColor !important

.blue-btn
  background-color: BlueColor !important
  transition: 0.3s

.blue-btn:hover
  background-color: LightBlueColor !important

.red-btn
  background-color: RedColor
  transition: 0.3s

.red-btn:hover
  background-color: DarkRedColor

.small-btn
  min-width: 50px !important
  height: 30px
  font-size: 14px !important
  padding: 0 !important

.arrow
  transition: all 0.2s ease

.rtl .rotate-side
  transform: rotate(-90deg)

.ltr .arrow
  transform:  scaleX(-1)

.ltr .rotate-side
  transform:  scaleX(-1) rotate(-90deg)

.required:after
  content: " *"
  color: RedColor

.logo
  font-size: 28px
  font-family: Magistral

.icon-img
  height: 11px !important
  width: 11px !important

.close-circle
  border-radius: 50%
  background-color: LightBlackColor
  color: #fff

.row-icons

  mat-icon
    font-size: 24px
    cursor: pointer
    color: DarkGreyColor

.simple-table

  th
    border: none
    color: LightBlackColor

  tbody
    box-shadow: 0 3px 6px 0 rgba(0, 0, 0, 0.16)

  td
    color: BlueColor

  .row-icons

    button
      width: 60px
      min-width: initial !important

.tabs
  display: flex
  border-bottom: 1px solid rgba(0, 0, 0, 0.31)

  .tab
    width: 150px
    padding: 5px 0
    cursor: pointer
    color: LightBlackColor
    text-align: center

  .tab.active, .tab:hover
    margin-bottom: -2px
    color: BlueColor
    font-weight: bold
    border-bottom: 3px solid BlueColor

.dialog-header
  @extend .flex-between
  margin-bottom: 15px
  font-weight: bold

/*--- Forms ---*/

form
  .row
    width: 75%

/* --- Material ---*/

.mat-checkbox-indeterminate.mat-primary .mat-checkbox-background,
.mat-checkbox-checked.mat-primary .mat-checkbox-background
  background-color: BlueColor

/*--- Bootstrap ---*/

.btn
  min-width: 120px
  font-size: 14px !important

.table-striped > tbody > tr:nth-of-type(odd)
  background-color: GreyColor
  --bs-table-accent-bg: GreyColor

/*--- Bootstrap LTR ---*/

  .ltr .ms-1
    margin-right: 0.25rem !important
    margin-left: 0 !important

  .ltr .ms-3
    margin-right: 1rem !important
    margin-left: 0 !important

  .ltr .pe-3
    padding-left: 1rem !important;
    padding-right: 0 !important

/* --- Data Table ---*/

.data-table

  .table
    background-color: WhiteColor
    border: 1px solid LighterGreyColor

  .table > :not(caption) > * > *
    padding: 0.75rem 0.75rem

app-data-table

  tbody tr:nth-child(even)
    background-color: LightColor !important

  app-pagination
    .page-link
      border-color: transparent !important
      color: BlueColor !important
      font-size: 12px

    .page-item.active
      .page-link
        background-color: BlueColor !important
        color: #fff !important

    .page-item.disabled
      .page-link
        background-color: LightColor

/* --- Swal --- */

.swal2-container
  z-index: 99999999 !important

.swal2-styled.swal2-confirm
  background-color: BlueColor

/*--- Loader --- */

.overlay
  position: absolute
  top: 0
  right: 0
  height: 100vh
  width: 100%
  background: rgba(0, 0, 0, 0.3)
  z-index: 999999999
  overflow: hidden

.loader, .loader:after
  border-radius: 50%
  width: 10em
  height: 10em

.loader
  position: relative
  margin: 60px auto
  font-size: 10px
  text-indent: -9999em
  border-top: 1.1em solid rgba(255, 255, 255, 0.2)
  border-right: 1.1em solid rgba(255, 255, 255, 0.2)
  border-bottom: 1.1em solid rgba(255, 255, 255, 0.2)
  border-left: 1.1em solid #fff
  -webkit-transform: translateZ(0)
  -ms-transform: translateZ(0)
  transform: translateZ(0)
  -webkit-animation: load8 1.1s infinite linear
  animation: load8 1.1s infinite linear

@-webkit-keyframes load8
  0%
    -webkit-transform: rotate(0deg)
    transform: rotate(0deg)

  100%
    -webkit-transform: rotate(360deg)
    transform: rotate(360deg)

@keyframes load8
  0%
    -webkit-transform: rotate(0deg)
    transform: rotate(0deg)

  100%
    -webkit-transform: rotate(360deg)
    transform: rotate(360deg)
