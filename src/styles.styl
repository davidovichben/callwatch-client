@import '~src/assets/variables';

@font-face
  src: url('assets/fonts/OpenSansHebrew-Regular.ttf')
  font-family: OpenSans

@font-face
  src: url('assets/fonts/Magistral-Medium.ttf')
  font-family: Magistral

body
  margin: 0
  padding: 0
  font-family: OpenSans

ul
  margin: 0
  padding: 0
  list-style-type: none

h1, h2, h3, h4, .h1, .h2, .h3, .h4
  color: BlueColor

a, a:hover
  text-decoration: none !important

input[type=checkbox], input[type=radio]
  cursor: pointer

input[type=file]
  display: none

button:focus
  outline: 0 !important

th, td
  text-align: center

.flex-grow-1
  flex-grow: 1

.flex-center
  display: flex
  align-items: center
  justify-content: center

.flex-between
  display: flex
  align-items: center
  justify-content: space-between

.flex-end
  display: flex
  align-items: center
  justify-content: flex-end

.white-text
  color: #fff

.grey-text
  color: GreyColor

.blue-text
  color: BlueColor

.f-12
  font-size: 12px

.f-16
  font-size: 16px

.f-18
  font-size: 18px

.f-20
  font-size: 20px

.w-100p
  width: 100px

.w-200p
  width: 200px

.w-300p
  width: 300px

.pointer
  cursor: pointer

.disabled
  pointer-events: none

.enabled
  pointer-events: all

.link
  color: #024dbc
  cursor: pointer

.fade
  opacity: 0
  transition: 0.3s

.fade.show
  opacity: 1

.rtl .btn > img
  margin-left: 10px

.ltr .btn > img
  margin-right: 10px

.grey-btn, .blue-btn
  color: WhiteColor !important

.white-btn
  background-color: LightColor !important
  color: BlueColor !important
  border: 1px solid BlueColor !important

.grey-btn
  background-color: GreyColor !important

.blue-btn
  background-color: BlueColor !important

.small-btn
  min-width: 50px !important
  height: 30px
  font-size: 14px !important
  padding: 0 !important

.triangle-down, .triangle-left
  transition: 0.2s

.triangle-left
  border: 6px solid transparent

.rtl .triangle-left
  border-right: 6px solid WhiteColor

.ltr .triangle-left
  border-left: 6px solid WhiteColor

.triangle-down
  margin-top: 8px
  border: 6px solid transparent
  border-top: 6px solid WhiteColor

.required:after
  content: " *"
  color: RedColor

.logo
  font-size: 28px
  font-family: Magistral

.icon-img
  height: 11px !important
  width: 11px !important

.row-icons
  > mat-icon
    font-size: 24px
    cursor: pointer
    color: DarkGreyColor

.tabs
  display: flex
  border-bottom: 1px solid rgba(0, 0, 0, 0.31)

  .tab
    width: 150px
    padding: 5px 0
    cursor: pointer
    color: #606060
    text-align: center

  .tab.active, .tab:hover
    margin-bottom: -2px
    color: BlueColor
    font-weight: bold
    border-bottom: 3px solid BlueColor

.dialog-header
  @extend .flex-between
  margin-bottom: 15px
  font-weight: bold

/* --- Material ---*/

.mat-checkbox-indeterminate.mat-primary .mat-checkbox-background,
.mat-checkbox-checked.mat-primary .mat-checkbox-background
  background-color: BlueColor

/*--- Bootstrap ---*/

.btn
  min-width: 120px
  font-size: 14px !important

/*--- Bootstrap LTR ---*/

  .ltr .ms-1
    margin-right: 0.25rem !important
    margin-left: 0 !important

  .ltr .ms-3
    margin-right: 1rem !important
    margin-left: 0 !important

  .ltr .pe-3
    padding-left: 1rem !important;
    padding-right: 0 !important

/* --- Data Table ---*/

.data-table

  .table
    background-color: WhiteColor

tbody tr:nth-child(even)
  background-color: LightColor !important

/* --- Swal --- */

.swal2-container
  z-index: 99999999 !important

.swal2-styled.swal2-confirm
  background-color: BlueColor

/*--- Loader --- */

.overlay
  position: absolute
  top: 0
  right: 0
  height: 100vh
  width: 100%
  background: rgba(0, 0, 0, 0.3)
  z-index: 999999999
  overflow: hidden

.loader, .loader:after
  border-radius: 50%
  width: 10em
  height: 10em

.loader
  position: relative
  margin: 60px auto
  font-size: 10px
  text-indent: -9999em
  border-top: 1.1em solid rgba(255, 255, 255, 0.2)
  border-right: 1.1em solid rgba(255, 255, 255, 0.2)
  border-bottom: 1.1em solid rgba(255, 255, 255, 0.2)
  border-left: 1.1em solid #fff
  -webkit-transform: translateZ(0)
  -ms-transform: translateZ(0)
  transform: translateZ(0)
  -webkit-animation: load8 1.1s infinite linear
  animation: load8 1.1s infinite linear

@-webkit-keyframes load8
  0%
    -webkit-transform: rotate(0deg)
    transform: rotate(0deg)

  100%
    -webkit-transform: rotate(360deg)
    transform: rotate(360deg)

@keyframes load8
  0%
    -webkit-transform: rotate(0deg)
    transform: rotate(0deg)

  100%
    -webkit-transform: rotate(360deg)
    transform: rotate(360deg)
