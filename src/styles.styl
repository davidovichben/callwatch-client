@font-face
  src: url('assets/fonts/OpenSansHebrew-Regular.ttf')
  font-family: OpenSans

#app
  direction: rtl
  font-family: OpenSans
  height: 100vh

#app.ltr
  direction: ltr

h1, h4
  color: #005073

a, a:hover
  text-decoration: none !important

input[type=checkbox], input[type=radio]
  cursor: pointer

input[type=file]
  display: none

button:focus
  outline: 0 !important

th, td
  text-align: center

.flex-grow-1
  flex-grow: 1

.flex-center
  display: flex
  align-items: center
  justify-content: center

.flex-between
  display: flex
  align-items: center
  justify-content: space-between

.flex-end
  display: flex
  align-items: center
  justify-content: flex-end

.white-text
  color: #fff

.grey-text
  color: #606060

.blue-text
  color: #29539b

.f-12
  font-size: 12px

.f-16
  font-size: 16px

.f-18
  font-size: 18px

.w-100p
  width: 100px

.w-200p
  width: 200px

.w-300p
  width: 300px

.pointer
  cursor: pointer

.link
  color: #024dbc
  cursor: pointer

.fade
  opacity: 0
  transition: 0.3s

.fade.show
  opacity: 1

.rtl .btn > img
  margin-left: 10px

.ltr .btn > img
  margin-right: 10px

.grey-btn, .blue-btn
  color: #fff !important

.white-btn
  background-color #f0f3f4 !important
  color #005073 !important
  border 1px solid #005073 !important

.grey-btn
  background-color: #afafaf !important

.blue-btn
  background-color: #1e3b70 !important

.small-btn
  min-width: 50px !important
  height: 30px
  font-size: 14px !important
  padding: 0 !important

.triangle-down, .triangle-left
  transition: 0.2s

.triangle-left
  border: 6px solid transparent

.rtl .triangle-left
  border-right: 6px solid #fff

.ltr .triangle-left
  border-left: 6px solid #fff

.triangle-down
  margin-top: 8px
  border: 6px solid transparent
  border-top: 6px solid #fff

.question-mark
  cursor: pointer
  width: 20px
  height: 20px
  padding: 2px 7px
  font-size: 12px
  color: #fff
  margin-top 7px
  border-radius: 50%
  background-color: #ccc

.rtl .question-mark
  margin-left: 7px

.ltr .question-mark
  margin-right: 7px

.question-mark:before
  content: '?'

.required:after
  content:" *"
  color: red

.icon-img
  height: 11px !important
  width: 11px !important

.row-icons
  > i
    font-size: 24px
    cursor: pointer

.tabs
  display: flex
  border-bottom: 1px solid rgba(0, 0, 0, 0.31)

  .tab
    width: 150px
    padding: 5px 0
    cursor: pointer
    color: #606060
    text-align: center

  .tab.active, .tab:hover
    margin-bottom: -2px
    color: #1e3b70
    font-weight: bold
    border-bottom: 3px solid #1e3b70

/*--- Swal ---*/

.swal2-modal
  direction: rtl

/*--- Bootstrap ---*/

.btn
  min-width: 120px
  font-size: 14px !important

.form-group
  position: relative
  width: 300px

  .form-select
  .form-control
    color #005073 !important
    box-shadow 0 3px 6px 0 rgba(0, 0, 0, 0.16) !important
    border none !important

  label
    position: absolute
    top: -8px
    font-size: 12px
    color: #112344
    background-color: #f0f3f4
    z-index: 1

.rtl .form-group label
  right: 12px

.ltr .form-group label
  left: 12px

.form-switch
  display: flex !important

  .form-check-input
    margin-left: 10px !important

.form-select
  padding: 0.375rem 0.75rem 0.375rem 0.75rem !important

.rtl .form-select
  background-position: left 0.75rem center !important

.form-check
  display: flex !important
  align-items: center

.rtl .form-check-input
  margin-left: 5px !important

.ltr .form-check-input
  margin-right: 5px !important

/* --- Swal --- */

.swal2-container
  z-index: 99999999 !important

/*--- Loader --- */

.overlay
  position: absolute
  top: 0
  right: 0
  height: 100vh
  width: 100%
  background: rgba(0, 0, 0, 0.3)
  z-index: 999999999
  overflow: hidden

.loader, .loader:after
  border-radius: 50%
  width: 10em
  height: 10em

.loader
  position: relative
  margin: 60px auto
  font-size: 10px
  text-indent: -9999em
  border-top: 1.1em solid rgba(255, 255, 255, 0.2)
  border-right: 1.1em solid rgba(255, 255, 255, 0.2)
  border-bottom: 1.1em solid rgba(255, 255, 255, 0.2)
  border-left: 1.1em solid #fff
  -webkit-transform: translateZ(0)
  -ms-transform: translateZ(0)
  transform: translateZ(0)
  -webkit-animation: load8 1.1s infinite linear
  animation: load8 1.1s infinite linear

@-webkit-keyframes load8
  0%
    -webkit-transform: rotate(0deg)
    transform: rotate(0deg)

  100%
    -webkit-transform: rotate(360deg)
    transform: rotate(360deg)

@keyframes load8
  0%
    -webkit-transform: rotate(0deg)
    transform: rotate(0deg)

  100%
    -webkit-transform: rotate(360deg)
    transform: rotate(360deg)
