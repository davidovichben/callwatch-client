@import '~src/assets/variables';

@font-face
  src: url('assets/fonts/OpenSansHebrew-Regular.ttf')
  font-family: OpenSans

@font-face
  src: url('assets/fonts/Magistral-Medium.ttf')
  font-family: Magistral

@font-face
  font-family: 'Material Icons'
  font-style: normal
  font-weight: 400
  src: url('assets/fonts/MaterialIcons.woff2')

.material-icons
  font-family: 'Material Icons'
  font-weight: normal
  font-style: swap
  font-display: block
  font-size: 24px
  line-height: 1
  letter-spacing: normal
  text-transform: none
  display: inline-block
  white-space: nowrap
  word-wrap: normal
  direction: ltr
  -webkit-font-feature-settings: 'liga'
  -webkit-font-smoothing: antialiased

.material-icons:before
  display: none

body
  margin: 0
  padding: 0
  font-family: OpenSans

th:first-child, td:first-child
  padding: 0.75rem 25px !important

td
  vertical-align: middle

ul
  margin: 0
  padding: 0
  list-style-type: none

h1, h2, h3, h4, .h1, .h2, .h3, .h4
  color: BlueColor

h1, .h1
  font-size: 2rem

h2, .h2
  font-size: 1.85rem

h3, .h3
  font-size: 1.125rem

a, a:hover
  text-decoration: none !important

input[type=checkbox], input[type=radio]
  cursor: pointer

input[type=file]
  display: none

button
  border: none

button:focus
  outline: 0 !important

.flex-grow-1
  flex-grow: 1

.flex-center
  display: flex
  align-items: center
  justify-content: center

.flex-between
  display: flex
  align-items: center
  justify-content: space-between

.flex-end
  display: flex
  align-items: center
  justify-content: flex-end

.ltr
  direction: ltr

.bold
  font-weight: bold

.text-left
  text-align: left !important

.underline
  text-decoration: underline

.white-text
  color: #fff

.dark-grey-text
  color: DarkGreyColor

.grey-text
  color: GreyColor

.blue-text
  color: BlueColor

.red-text
  color: RedColor

.green-text
  color: GreenColor

.f-12
  font-size: 12px

.f-14
  font-size: 14px

.f-16
  font-size: 16px

.f-18
  font-size: 18px

.f-20
  font-size: 20px

.w-100p
  width: 100px !important

.w-200p
  width: 200px !important

.w-250p
  width: 250px !important

.w-300p
  width: 300px !important

.pointer
  cursor: pointer

.disabled
  pointer-events: none

.enabled
  pointer-events: all

.link
  color: #024dbc
  cursor: pointer

.fade
  opacity: 0
  transition: 0.3s

.fade.show
  opacity: 1

.rtl .btn > img
  margin-left: 10px

.ltr .btn > img
  margin-right: 10px

.grey-btn, .blue-btn, .red-btn, .green-btn
  color: WhiteColor !important

.white-btn
  background-color: LightColor !important
  color: BlueColor !important
  border: 1px solid BlueColor !important

.grey-btn
  background-color: DarkGreyColor !important

.blue-btn
  background-color: BlueColor !important
  transition: 0.3s

.blue-btn:hover
  background-color: LightBlueColor !important

.green-btn
  background-color: GreenColor
  transition: 0.3s

.green-btn:hover
  background-color: DarkGreenColor

.red-btn
  background-color: RedColor
  transition: 0.3s

.red-btn:hover
  background-color: DarkRedColor

.small-btn
  min-width: 50px !important
  height: 30px
  font-size: 14px !important
  padding: 0 !important

.white-bg
  background-color: WhiteColor

.side-chevron
  transition: all 0.2s ease

.rtl .rotate-side
  transform: rotate(-90deg)

.ltr .side-chevron
  transform: scaleX(-1)

.ltr .rotate-side
  transform: scaleX(-1) rotate(-90deg)

.required:after
  content: " *"
  color: RedColor

.logo
  font-size: 24px
  font-family: Magistral

.icon-img
  height: 11px !important
  width: 11px !important

.close-circle
  border-radius: 50%
  background-color: LightBlackColor
  color: #fff

.input-error
  padding: 0 10px
  font-size: 12px
  color: RedColor

.row-icons

  mat-icon
    font-size: 24px
    cursor: pointer
    color: DarkGreyColor

  mat-menu

    mat-icon
      margin: 0 !important

.row-action
  font-family: OpenSans

.simple-table

  th, td
    font-size: 14px

  th
    border: none
    color: LightBlackColor

  td
    color: BlueColor

  .row-icons

    button
      width: 60px
      min-width: initial !important

.simple-table.table-striped tbody
  background-color: WhiteColor

.tabs
  display: flex
  margin-bottom: 50px
  border-bottom: 1px solid rgba(0, 0, 0, 0.31)

  .tab
    min-width: 120px
    padding: 5px 20px
    cursor: pointer
    color: LightBlackColor
    text-align: center

  .tab.active, .tab:hover
    margin-bottom: -2px
    color: BlueColor
    font-weight: bold
    border-bottom: 3px solid BlueColor

.dialog-header
  @extend .flex-between
  margin-bottom: 15px
  font-weight: bold

.user-avatar
  border-radius: 50%
  object-fit: cover

.user-default-avatar
  color: DarkGreyColor

.breadcrumbs
  display: flex

  a
    color: LightBlackColor

  a.active
    color: BlueColor
    font-weight: bold

  mat-icon
    margin: 0 12px
    color: DarkGreyColor

/*--- Forms ---*/

form

  .form-header
    @extend .flex-between
    margin-bottom: 15px
    background-color: GreyColor

.form-body
  padding: 2rem 1rem
  background-color: WhiteColor
  border-radius: 5px

  section
    margin-bottom: 20px

  .mat-form-field, form-field
    width: 100%

@media (min-width: 992px)

  .form-body
    padding: 2rem

    section
      margin-bottom: 50px

@media (max-width: 992px)

  .form-header

    .h1
      font-size: 1.5rem

    .btn
      min-width: 100px

  .form-body

    .h3
      font-size: 1.25rem
      text-align: center

